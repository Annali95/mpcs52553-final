


<div class="w3-main w3-content w3-padding" style="max-width:1200px;margin-top:100px">
<div class="w3-center w3-padding-16">
  <%= link_to "Add an article", "/article/new", class: "btn btn-primary" %>
</div>


 <% count = 0%>
<div class="w3-row-padding w3-padding-16 w3-center">
<% @article.each do |article| %>
  <% count = count+1%>
    <% if count == 4 %> 
       </div>
       <div class="w3-row-padding w3-padding-16 w3-center">
       <% count = 0%>
    <% end %>
    <% count = count+1%>
    <div class="w3-quarter">
      <img src="https://www.w3schools.com/w3images/sandwich.jpg" alt="Sandwich" style="width:100%">
      <h3><%= link_to article.title, "/article/#{article.id}" %></h3>
      <%= link_to "Delete", "/article/#{article.id}", method: 'delete', data: { confirm: 'Are you sure?' } %>
      <p><%= article.content %></p>
    </div>
<% end %>
</div>

  