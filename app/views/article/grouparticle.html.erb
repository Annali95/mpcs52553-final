<div class="w3-main w3-content w3-padding" style="max-width:1200px;margin-top:100px">
<% if @grouparticle.present? %>
<div class="w3-center w3-padding-16">
<%= link_to "Add a new article to the group", "/article/new/#{params["group_id"]}", class: "btn btn-primary" %>
</div>
   <% count = 0%>
       <div class="w3-row-padding w3-padding-16 w3-center">
    <% @grouparticle.each do |articles| %>
      <% count = count+1%>
        <% if count == 4 %> 
           </div>
           <div class="w3-row-padding w3-padding-16 w3-center">
           <% count = 0%>
        <% end %>
        <% count = count+1%>
        <div class="w3-quarter">
          <% article = Article.find_by(id: articles.article_id) %>
          <img src= <%= article.url %> style="width:100%">
          <h3><%= link_to article.title, "/article/#{article.id}" %></h3>
          <%= link_to "Delete", "/article/#{article.id}", method: 'delete', data: { confirm: 'Are you sure?' } %>
          <%= link_to "Edit", "/article/#{article.id}/edit" %>
          <p><%= article.content %></p>
        </div>
      <% end %>
    </div>

<%else%>  
<p>Nothing!</p>
<%end%>
</div>