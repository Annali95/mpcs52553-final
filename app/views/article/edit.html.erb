<%= form_tag "/article/#{@article.id}", method: 'patch' do %>
  <p>
    <%= label_tag "title" %>
    <%= text_field_tag "title" , @article.title%>
  </p>

  <p>
    <%= label_tag "content" %>
    <%= text_field_tag "content", @article.content %>
  </p>

  <p>
    <%= submit_tag "Submit changes", class: 'button' %>
    or
    <%= link_to "Cancel", "/article/#{@article.id}" %>
  </p>

<% end %>
