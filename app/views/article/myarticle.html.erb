<p><%= link_to "Add a article", "/article/new", class: 'button' %></p>
<% if @article.present? %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th>title</th>
        </tr>
      </thead>
      <tbody>

        <% @article.each do |article| %>

          <tr>
              <td><%= link_to "Toast", "/article/#{article.id}", method: 'delete' %>
              <td><%= link_to "Edit", "/article/#{article.id}/edit" %>
              <td><%= article.title %></td>
              <td><%= article.content %></td>
          </tr>

        <% end %>
      </tbody>
    </table>
<%else%>  
<p>Nothing!</p>
<%end%>
