

<div class="w3-row-padding w3-padding-16">
<% if session["user_id"].present? %>
<% if User.find_by(id: session["user_id"]).admin==1 %>
  <p><%= link_to "Add a new group", "/groups/new", class:"w3-button w3-padding-small w3-white w3-border" %></p>
<% end %>
<% end %>

<ul class="w3-ul w3-hoverable w3-white">
  <% @group.each do |group| %>
    <li class="w3-padding-16">
     <div class="w3-row">
            <div class="w3-col m8 s12">
                 <span class="w3-large"><b>name: </b><%= group.name %></span><br></br>
                 <span class="w3-large"><b>detail: </b><%= group.detail %></span>

            </div>
          <div class="w3-col m4 w3-hide-small">
          <span><%= link_to "Showmember", "/groupmembers/#{group.id}" ,:class=>"w3-button w3-padding-small w3-white w3-border"%></span>
          <%= link_to "Join", "/connections/#{group.id}" ,:class=>"w3-button w3-padding-small w3-white w3-border" %>
          <% if session["user_id"].present? %>
          <% if User.find_by(id: session["user_id"]).admin==1 %>
              <%= link_to "delete", "/groups/#{group.id}",method: 'delete' ,:class=>"w3-button w3-padding-small w3-white w3-border"%><br></br>
           <% end %>
           <% end %>

          
           <%= link_to "group article", "/grouparticles/#{group.id}" ,:class=>"w3-button w3-padding-small w3-white w3-border"%>
          </div>
      </div>   
    </li>

  <% end %>
</ul>
</div>



